{{template "base" .}}

{{define "content"}}
    <div class="container">
        <div class="row">
            <div id="main-carousel" class="carousel slide carousel-fade" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#main-carousel" data-slide-to="0" class="active"></li>
                    <li data-target="#main-carousel" data-slide-to="1"></li>
                    <li data-target="#main-carousel" data-slide-to="2"></li>
                    <li data-target="#main-carousel" data-slide-to="3"></li>
                </ol>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="/static/images/placeHolderClinic.PNG" class="d-block w-100" alt="exterior">
                    </div>
                    <div class="carousel-item">
                        <img src="/static/images/room1.JPG" class="d-block w-100" alt="room">
                    </div>
                    <div class="carousel-item">
                        <img src="/static/images/structure.jpg" class="d-block w-100" alt="structure">
                    </div>
                    <div class="carousel-item">
                        <img src="/static/images/waitingRoom.JPG" class="d-block w-100" alt="waiting room">
                    </div>
                </div>
            </div>

        </div>


        <div class="row">
            <div class="col">
                <h1 class="text-center mt-4">Welcome to Jian Li Herbs & Acupuncture</h1>
                <p>The stop for the essential healthcare and medical needs!</p>
            </div>
        </div>
        <div class="row">
            <div class="col">
                Left
            </div>
            <div class="col">
                Middle
            </div>
            <div class="col" style="background-color:#b8dee0">
                <h2> About the Clinic </h2>
                <p>The clinic is a location with a comfortable environment where people can recieve treatment and comfort from experienced acupuncturists and massagers, as well as purchase items essential for health, such as herbs and essential oils. We can even provide home visits within 10 miles!</p>
            </div>
        </div>
        <div class="row">
            <div class="col text-center">
                <br>
                <a href="/search-availability" class="btn btn-success">Make an appointment now</a>
            </div>
        </div>
    </div>
{{end}}